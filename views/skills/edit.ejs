<%- include('../partials/header') %>

<h3>Edit Skill</h3>
<form action="/skills/<%= skills.id %>?_method=PUT" method="POST" autocomplete="off">
  <input type="text" name="skill" value="<%= skill.skill %>">
  <br>
  <input type="checkbox" name="mastered" <%= skill.mastered ? 'checked' : '' %>> Mastered?
  <br>
  <button type="submit">Update Skill</button>
</form>

